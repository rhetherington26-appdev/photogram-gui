
<h1>List of users</h1>

<div>
<form action="/users/add">
  <label id="user_add">Username</label>
  <input id="user_add" type="text" name="username" placeholder="Enter a username...">
  <button>Add user</button>
</form>
</div>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th></th>
  </tr>
  <tr><% @user_list.each do |user|%>
    <td><%= user.id%></td>
    <td><%= user.username%></td>
    <td><a href="/users/<%= user.username%>">Show details</a></td>
  </tr><% end%>
</table>

